@model AppUserVM

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#loginForm").submit(function(event) {
                var isValid = true;

                var email = $("#Email").val().trim();
                var password = $("#PasswordHash").val().trim();

                if (email === "") {
                    $("#emailError").text("Email alanı boş bırakılamaz.").show();
                    isValid = false;
                } else {
                    $("#emailError").hide();
                }

                if (password === "") {
                    $("#passwordError").text("Şifre alanı boş bırakılamaz.").show();
                    isValid = false;
                } else {
                    $("#passwordError").hide();
                }

                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
</head>
<body>
    <form asp-action="Login" asp-controller="SignIn" method="post" class="form-control" id="loginForm">
        <div>
            <label>Email</label>
            <input asp-for="Email" class="form-control" id="Email" />
            <span id="emailError" style="color: red; display: none;"></span>
        </div>
        <br />
        <div>
            <label>Password</label>
            <input asp-for="PasswordHash" class="form-control" id="PasswordHash" />
            <span id="passwordError" style="color: red; display: none;"></span>
        </div>
        <div>
            <a asp-action="GetMail">Şifremi sıfırla</a>
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>
    </form>
</body>
</html>