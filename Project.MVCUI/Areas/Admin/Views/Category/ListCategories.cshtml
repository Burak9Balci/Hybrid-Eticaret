@model ListCategoryPageVM
<div>
    <br />
<section>
    <a asp-action="AddCategory" class="btn btn-primary">Add Category</a>
</section>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>CategoryName</th>
        <th>Description</th>
        <th>Status</th>
        <th>Update</th>
        <th>Delete</th>

    </tr>

    @foreach (CategoryVM item in Model.Categories)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a asp-action="UpdateCategory" asp-route-id="@item.ID" class="btn btn-warning">Update</a></td>
            <td><a asp-action="DeleteCategory" asp-route-id="@item.ID" class="btn btn-danger">Delete</a></td>
        </tr>
    }

</table>
</div>
